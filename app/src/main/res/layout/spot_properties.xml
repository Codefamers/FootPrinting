<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_spot_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">

        <ImageView
            style="@style/icon_project_info"
            android:src="@mipmap/ic_forward_white_24dp" />

        <android.support.design.widget.TextInputLayout
            style="@style/textInputLayout"
            android:layout_weight="3"
            android:orientation="horizontal">

            <AutoCompleteTextView
                android:id="@+id/et_spot_batch"
                style="@style/autoCompleteTextView"
                android:focusable="false"
                android:hint="编码"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

        <ImageView

            style="@style/icon_project_info"
            android:src="@mipmap/ic_flag_white_24dp" />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/sp_spot_type"
            style="@style/textInputLayout"
            android:layout_weight="6"
            android:entries="@array/spot_type" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <ImageView

            style="@style/icon_project_info"
            android:src="@mipmap/ic_place_white_24dp" />

        <android.support.design.widget.TextInputLayout style="@style/textInputLayout">

            <AutoCompleteTextView
                android:id="@+id/et_last_position"
                style="@style/autoCompleteTextView"
                android:focusable="false"
                android:hint="上一个点的位置"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btn_choose_spot"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginRight="16dp"
            android:background="@drawable/btn_dialog_confirm"
            android:text="选择" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <ImageView

            style="@style/icon_project_info"
            android:src="@mipmap/ic_place_white_24dp" />

        <android.support.design.widget.TextInputLayout style="@style/textInputLayout">

            <AutoCompleteTextView
                android:id="@+id/et_spot_position"
                style="@style/autoCompleteTextView"
                android:hint="勘探位置"
                android:maxLines="3" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <ImageView

            style="@style/icon_project_info"
            android:src="@mipmap/ic_language_white_24dp" />

        <android.support.design.widget.TextInputLayout style="@style/textInputLayout">

            <AutoCompleteTextView
                android:id="@+id/et_spot_longitude"
                style="@style/autoCompleteTextView"
                android:focusable="false"
                android:hint="经度"

                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

        <ImageView

            style="@style/icon_project_info"
            android:src="@mipmap/ic_language_white_24dp" />

        <android.support.design.widget.TextInputLayout style="@style/textInputLayout">

            <AutoCompleteTextView
                android:id="@+id/et_spot_latitude"
                style="@style/autoCompleteTextView"
                android:focusable="false"
                android:hint="纬度"

                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <ImageView

            style="@style/icon_project_info"
            android:src="@mipmap/ic_linear_scale_white_24dp" />

        <android.support.design.widget.TextInputLayout style="@style/textInputLayout">

            <AutoCompleteTextView
                android:id="@+id/et_spot_distance"
                style="@style/autoCompleteTextView"
                android:focusable="false"
                android:hint="挡距（m）"

                android:maxLines="1" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <ImageView

            style="@style/icon_project_info"
            android:src="@mipmap/ic_description_white_24dp" />

        <android.support.design.widget.TextInputLayout style="@style/textInputLayout">

            <AutoCompleteTextView
                android:id="@+id/et_spot_des"
                style="@style/autoCompleteTextView"
                android:hint="位置描述"
                android:maxLines="5" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>


</LinearLayout>