<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@id/ll_project_info"
    android:visibility="gone"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">

        <ImageView
            style="@style/icon_project_info"
            android:src="@mipmap/ic_forward_white_24dp" />

        <android.support.design.widget.TextInputLayout
            style="@style/textInputLayout"

            android:layout_weight="5">

            <AutoCompleteTextView
                android:id="@+id/et_project_batch"
                style="@style/autoCompleteTextView"
                android:hint="项目批次"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

        <ImageView

            style="@style/icon_project_info"
            android:src="@mipmap/ic_flag_white_24dp" />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/sp_project_category"
            style="@style/textInputLayout"
            android:layout_weight="6"
            android:entries="@array/project_category" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <ImageView

            style="@style/icon_project_info"
            android:src="@mipmap/ic_format_list_numbered_white_24dp" />

        <android.support.design.widget.TextInputLayout style="@style/textInputLayout">

            <AutoCompleteTextView
                android:id="@+id/et_project_num"
                style="@style/autoCompleteTextView"
                android:hint="定义号"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <ImageView

            style="@style/icon_project_info"
            android:src="@mipmap/ic_description_white_24dp" />

        <android.support.design.widget.TextInputLayout style="@style/textInputLayout">

            <AutoCompleteTextView
                android:id="@+id/et_project_des"
                style="@style/autoCompleteTextView"
                android:hint="项目描述"
                android:maxLines="5" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <ImageView

            style="@style/icon_project_info"
            android:src="@mipmap/ic_note_add_white_24dp" />

        <android.support.design.widget.TextInputLayout style="@style/textInputLayout">

            <AutoCompleteTextView
                android:id="@+id/et_project_remark"
                style="@style/autoCompleteTextView"
                android:hint="项目备注"
                android:maxLines="5" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

</LinearLayout>